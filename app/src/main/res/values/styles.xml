<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cardview_light_background</item>
        <item name="colorPrimaryDark">@color/cardview_light_background</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="editTextColor">@android:color/black</item>
    </style>

    <!--<style name="editTextStyle" parent="Base.Widget.AppCompat.EditText">-->
        <!--<item name="textColor"></item>-->
    <!--</style>-->

    <style name="AppTheme.NoActionBar.NoTitle_FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog"></style>

    <style name="dialogTransparent" parent="DialogTheme">
        <!-- 更换背景图片实现全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialogDimEnabledFalse" parent="dialogTransparent">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="registerEditView">
        <item name="android:paddingRight">26px</item>
        <item name="android:paddingLeft">26px</item>
        <item name="android:layout_width">307px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/bg_btn_white</item>
    </style>

    <style name="itemTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_margin">15px</item>
    </style>

    <style name="homeTabTextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0px</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">15px</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--使用记录-->
    <style name="useRecordItemStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--使用记录头-->
    <style name="useRecordHeadStyle">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
