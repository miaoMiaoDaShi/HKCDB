<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/mProBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:layout_gravity="center" />

        <LinearLayout
            android:id="@+id/mRlContentBlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mIvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="76px"
                android:layout_marginTop="76px"
                android:src="@drawable/ic_result" />

            <TextView
                android:id="@+id/mTvHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_insert_the_charger_into_the_open_position"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mBtnConfirm"
                android:layout_width="550px"
                android:layout_height="80px"
                android:layout_marginTop="90px"
                android:background="@drawable/select_btn_yellow_oval"
                android:text="@string/to_pay_order"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>