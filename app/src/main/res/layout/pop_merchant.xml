<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="230px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/ivItemMerchantPhoto"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_margin="26px"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginBottom="26px"
            android:layout_marginTop="26px"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemMerchantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 太二酸菜鱼"
                android:textColor="#494949"
                android:textSize="15sp" />

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0px"/>
            <TextView
                android:id="@+id/tvItemMerchantAddrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="广州市天河区"
                android:textColor="@color/gray"
                android:textSize="13sp" />
            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0px"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvCanUse"
                    android:layout_width="wrap_content"
                    android:paddingLeft="26px"
                    android:paddingRight="26px"
                    android:layout_height="50px"
                    android:text="可用 5 "
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:background="@drawable/bg_btn_yellow_false_oval"/>
                <TextView
                    android:id="@+id/tvRepayable"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="30px"
                    android:paddingLeft="25px"
                    android:paddingRight="25px"
                    android:layout_height="50px"
                    android:text="可還  20"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="15sp"
                    android:background="@drawable/bg_btn_black_oval"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llToNav"
            android:layout_marginRight="26px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/ivToNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nav"/>
            <TextView
                android:id="@+id/tvLong"
                android:layout_marginTop="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200米"
                android:gravity="center"
                android:textColor="@color/yellow"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>