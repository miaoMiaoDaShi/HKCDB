<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/divisionColor50"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:background="@color/divisionColor50">
        <com.youth.banner.Banner
            android:id="@+id/mBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.youth.banner.Banner>
        <TextView
            android:id="@+id/mTvIndicator"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="26px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="1/3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/mTvCommodityName"
        android:paddingLeft="26px"
        android:paddingRight="26px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="18sp"
        tools:text="杜蕾斯空氣套"
        android:textColor="@android:color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divisionColor50"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingRight="26px"
        android:paddingLeft="26px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credits_count"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>
        <TextView
            android:layout_marginLeft="26px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/orange"
            tools:text="200"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="26px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:paddingLeft="55px"
        android:paddingRight="55px"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <View
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="1dp"
            android:background="@color/divisionColor50"/>
        <TextView
            android:layout_marginLeft="26px"
            android:layout_marginRight="26px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="@string/commodity_des"/>
        <View
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="1dp"
            android:background="@color/divisionColor50"/>
    </LinearLayout>
</LinearLayout>