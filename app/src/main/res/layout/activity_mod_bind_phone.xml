<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="26px"
        android:background="@color/divisionColor50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTvAreaCode"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="26px"
            android:gravity="center"
            android:visibility="gone"
            android:paddingLeft="26px"
            android:paddingRight="26px"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/mEtPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="26px"
            android:paddingLeft="26px"
            android:lines="1"
            android:paddingRight="26px"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:hint="@string/please_new_phone_num"
            android:textColor="@android:color/black"
            android:textColorHint="@color/gray"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/bg_btn_white"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/mEtVerCode"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_white"
            android:drawableLeft="@drawable/ic_pwd"
            android:drawablePadding="26px"
            android:hint="@string/please_input_verification_code"
            android:paddingLeft="26px"
            android:paddingRight="26px"
            android:textColor="@android:color/black"
            android:textColorHint="@color/gray"
            android:textSize="13sp" />

        <cn.zcoder.xxp.base.widget.TimerButton
            android:id="@+id/mBtnGetVerCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20px"
            android:layout_marginRight="26px"
            android:layout_marginTop="20px"
            android:alpha="0.5"
            android:background="@drawable/bg_btn_black_oval"
            android:backgroundTint="@color/gray"
            android:gravity="center"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:text="@string/get_ver_code"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50" />
    <Button
        android:id="@+id/mBtnVerPhone"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="150px"
        android:background="@drawable/bg_btn_black_stroke_oval"
        android:text="@string/just_ver"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/mBtnCommit"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_marginTop="26px"
        android:background="@drawable/select_btn_yellow_oval"
        android:text="@string/confirm"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>