<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:padding="26px"
        android:layout_marginTop="15px"
        android:id="@+id/mIvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="26px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"
                android:textColor="@android:color/black"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/mTvMoney"
                android:layout_marginLeft="26px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="203"
                android:textColor="@android:color/black"
                android:textSize="24sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/mBtnTopUp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="26px"
            android:layout_alignParentRight="true"
            android:background="@drawable/select_btn_yellow_oval"
            android:layout_width="180px"
            android:layout_height="60px"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:text="@string/topup"
            />
    </RelativeLayout>
    <TextView
        android:layout_margin="26px"
        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:text="@string/account_balance"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
    <RelativeLayout
        android:id="@+id/mRlCreditCard"
        android:paddingLeft="26px"
        android:paddingRight="26px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/select_bg">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit_card"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_line"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
    <RelativeLayout
        android:id="@+id/mRlDefaultPay"
        android:paddingLeft="26px"
        android:paddingRight="26px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/select_bg">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_pay"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_line"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
    <RelativeLayout
        android:id="@+id/mRlOrderDetail"
        android:paddingLeft="26px"
        android:paddingRight="26px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/select_bg">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_line"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
    <RelativeLayout
        android:id="@+id/mRlMyCoupon"
        android:paddingLeft="26px"
        android:paddingRight="26px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/select_bg">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_coupon"
            android:textSize="15sp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_line"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
</LinearLayout>