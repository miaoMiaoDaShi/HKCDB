<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/mRlContactByPhone"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@drawable/select_bg"
        android:paddingLeft="26px"
        android:paddingRight="26px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/contact_by_phone"
            android:drawablePadding="26px"
            android:drawableLeft="@drawable/ic_call"
            android:textColor="@android:color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12312"
            android:textSize="12sp"
            android:textColor="@color/gray"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divisionColor50"/>
        <RelativeLayout
            android:id="@+id/mRlContactByEmail"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/select_bg"
            android:paddingLeft="26px"
            android:paddingRight="26px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/contact_by_email"
                android:drawablePadding="26px"
                android:drawableLeft="@drawable/ic_email"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12312"
                android:textSize="12sp"
                android:textColor="@color/gray"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divisionColor50"/>
        <RelativeLayout
            android:id="@+id/mRlAboutWebSite"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/select_bg"
            android:paddingLeft="26px"
            android:paddingRight="26px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/about_web_site"
                android:drawablePadding="26px"
                android:drawableLeft="@drawable/ic_web"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12312"
                android:textSize="12sp"
                android:textColor="@color/gray"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divisionColor50"/>
        <RelativeLayout
            android:id="@+id/mRlContactByWeChat"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/select_bg"
            android:paddingLeft="26px"
            android:paddingRight="26px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/contact_we_chat"
                android:drawablePadding="26px"
                android:drawableLeft="@drawable/ic_wechat"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12312"
                android:textSize="12sp"
                android:textColor="@color/gray"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divisionColor50"/>
        <RelativeLayout
            android:id="@+id/mRlContractByFacebook"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/select_bg"
            android:paddingLeft="36px"
            android:paddingRight="26px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/facebook_home"
                android:drawablePadding="38px"
                android:drawableLeft="@drawable/ic_contact_facebook"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="12312"
                android:textSize="12sp"
                android:textColor="@color/gray"
                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>