<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/tool_bar"/>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/divisionColor50"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="26px"
        android:background="@drawable/bg_btn_white">
        <EditText
            android:id="@+id/mEtContent"
            android:layout_width="match_parent"
            android:layout_height="226px"
            android:gravity="top"
            android:hint="@string/feedback_hint"
            android:textSize="15sp"
            android:background="@android:color/transparent"/>
        
        <ImageView
            android:id="@+id/mIvImage"
            android:layout_below="@id/mEtContent"
            android:layout_width="210px"
            android:layout_height="210px"
            android:src="@drawable/ic_add_image"/>
    </RelativeLayout>


    <Button
        android:id="@+id/mBtnCommit"
        android:layout_width="550px"
        android:layout_height="80px"
        android:layout_marginTop="70px"
        android:background="@drawable/select_btn_yellow_oval"
        android:text="@string/commit"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>
</LinearLayout>