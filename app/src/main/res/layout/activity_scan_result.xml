<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <include layout="@layout/tool_bar" />
    <ImageView
        android:layout_marginTop="76px"
        android:layout_marginBottom="76px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_result"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:text="@string/please_insert_the_charger_into_the_open_position"/>

    <Button
        android:layout_marginTop="90px"
        android:layout_width="550px"
        android:layout_height="80px"
        android:textColor="@android:color/black"
        android:background="@drawable/select_btn_yellow_oval"
        android:text="@string/to_pay_order"
        android:textSize="15sp"/>
</LinearLayout>