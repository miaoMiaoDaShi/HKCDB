<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/tool_bar"/>
<ImageView
    android:layout_margin="100px"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/mRlCompanyIntroduction"
            android:paddingLeft="26px"
            android:paddingRight="26px"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/select_bg">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_introduction"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:drawablePadding="26px"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_right_line"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divisionColor50"/>
        <RelativeLayout
            android:id="@+id/mRlContactUs"
            android:paddingLeft="26px"
            android:paddingRight="26px"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/select_bg">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:drawablePadding="26px"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_right_line"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/gray"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>