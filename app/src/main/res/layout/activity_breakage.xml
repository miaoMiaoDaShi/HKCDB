<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<include layout="@layout/tool_bar"/>
    <RelativeLayout
        android:id="@+id/mLlPhoto"
        android:layout_margin="26px"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="@drawable/bg_btn_white">

        <TextView
            android:id="@+id/mTvSelectPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/take_photo"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_take_photo"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:drawablePadding="26px"/>
        <ImageView
            android:id="@+id/mIvImageContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/mEtContent"
        android:layout_marginRight="26px"
        android:layout_marginLeft="26px"
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:background="@drawable/bg_btn_white"
        android:textSize="15sp"
        android:textColorHint="@color/gray"
        android:gravity="top"
        android:padding="26px"
        android:hint="@string/how_can_it_not_be_used"/>

    <Button
        android:id="@+id/mBtnCommit"
        android:layout_marginTop="90px"
        android:layout_marginLeft="26px"
        android:layout_marginRight="26px"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textSize="15sp"
        android:text="@string/breakage_power_bank"
        android:textColor="@android:color/black"
        android:background="@drawable/select_btn_yellow_oval"/>
</LinearLayout>