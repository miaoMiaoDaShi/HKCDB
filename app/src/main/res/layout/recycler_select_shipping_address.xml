<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="26px"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mTvReceiveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/format_receive_name"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mTvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:layout_toRightOf="@id/mTvReceiveName"
            android:textColor="@color/gray"
            android:textSize="14sp"
            tools:text="213124314" />

        <ImageView
            android:id="@+id/mIvCheck"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_un_check" />
    </RelativeLayout>

    <TextView
        android:id="@+id/mTvShippingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:text="@string/format_shipping_address"
        android:textColor="@color/gray"
        android:textSize="14sp" />


<TextView
    android:id="@+id/mTvIsDefault"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/orange"
    android:textSize="13sp"
    android:text="@string/default_address"/>

</LinearLayout>